@model TempleVolunteerClient.ResetForgottenPasswordViewModel

<div class="forgot-password-form">
    <form method="get" asp-controller="Account" asp-action="ResetForgottenPassword">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <input id="EmailAddress" type="hidden" asp-for="@Model.EmailAddress" />
        <input id="TempleName" type="hidden" asp-for="@Model.TempleName" />
        <input id="PropertyId" type="hidden" asp-for="@Model.PropertyId" />

        <div style="margin-left:-10px">
            <div class="form-group row" style="margin-bottom:15px;">
                <div class="col-4" style="text-align:right;">
                    Temple
                </div>
                <div class="col-4">
                    @Model.TempleName
                </div>
            </div>
            <div class="form-group row" style="margin-bottom:10px;">
                <div class="col-4" style="text-align:right;">
                    <label asp-for="Password"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Password" class="form-control" value="Mataji99#" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row" style="margin-bottom:10px;">
                <div class="col-4" style="text-align:right;">
                    <label asp-for="ConfirmPassword"></label>
                </div>
                <div class="col-8" style="text-align:left">
                    <input asp-for="ConfirmPassword" class="form-control" value="Mataji99#" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row" style="margin-bottom:10px">
                <div class="col-5 offset-4">
                    <button type="submit" class="btn btn-primary form-control">
                        Reset Password
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
	<script>
		$(document).ready(function () {

		});
	</script>
}
