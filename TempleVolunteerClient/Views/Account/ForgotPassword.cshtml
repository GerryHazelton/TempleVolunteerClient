@model TempleVolunteerClient.ForgotPasswordViewModel

<div class="forgot-password-form">
    <form method="post" asp-controller="Account" asp-action="ForgotPassword">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div style="margin-left:-10px">
            <div class="form-group row" style="margin-bottom:10px">
                <div class="col-4" style="text-align:right">
                    <label asp-for="EmailAddress"></label>
                </div>
                <div class="col-8">
                    <input id="EmailAddress" asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row" style="margin-bottom:10px">
                <div class="col-4" style="text-align:right">
                    <label asp-for="PostalCode"></label>
                </div>
                <div class="col-8">
                    <input id="EmailAddress" asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row" style="margin-bottom:15px; text-align:right">
                <div class="col-4">
                    <label asp-for="TemplePropertyId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="TemplePropertyId" asp-items="Model.TemplePropertyList" class="form-control"></select>
                    <span asp-validation-for="TemplePropertyId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row" style="margin-bottom:10px">
                <div class="col-5 offset-4">
                    <button type="submit" class="btn btn-primary form-control">
                        Reset Password
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $(function () {
                $(document).ready(function () {
                    var id = document.getElementById("emailAddressId");
                    id.focus();
                });
            });
        });
    </script>
}

